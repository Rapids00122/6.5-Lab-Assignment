<div x-data="{ names: ['Richard', 'John', 'Nathan', 'Drew', 'Jennifer', 'Wesley', 'Martin', 'Chris', 'Eric', 'Aaron'], randomNumber: null }">
    <button @click="randomNumber = generateRandomNumber()">Random Name</button>
    <h1 x-show="randomNumber !== null" x-text="names[randomNumber]"></h1>

    <script>
      function generateRandomNumber() {
        return Math.floor(Math.random() * 10);
      }
    </script>
  </div>
